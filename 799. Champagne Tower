class Solution:
    def champagneTower(self, poured: int, query_row: int, query_glass: int) -> float:
        # Create a DP array for 100 rows
        dp = [[0.0] * (i + 1) for i in range(100)]
        
        # Pour all champagne into top glass
        dp[0][0] = float(poured)
        
        # Fill the tower row by row
        for i in range(query_row + 1):
            for j in range(i + 1):
                # If current glass overflows
                if dp[i][j] > 1:
                    excess = dp[i][j] - 1
                    dp[i][j] = 1  # Cap current glass at 1
                    
                    # Distribute excess to next row
                    if i + 1 < 100:
                        dp[i + 1][j] += excess / 2
                        dp[i + 1][j + 1] += excess / 2
        
        # Return min(1, amount in queried glass)
        return min(1, dp[query_row][query_glass])

        
