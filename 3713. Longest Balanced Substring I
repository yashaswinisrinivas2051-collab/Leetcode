class Solution:
    def longestBalanced(self, s: str) -> int:
        n = len(s)
        ans = 0        
        for i in range(n):
            freq = {}
            maxf = 0            
            for j in range(i, n):
                c = s[j]
                freq[c] = freq.get(c, 0) + 1
                maxf = max(maxf, freq[c])               
                length = j - i + 1
                distinct = len(freq)                
                if maxf * distinct == length:
                    ans = max(ans, length)        
        return ans
        
