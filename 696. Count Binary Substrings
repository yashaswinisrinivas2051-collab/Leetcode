class Solution:
    def countBinarySubstrings(self, s: str) -> int:
        groups = []
        count = 1
        
        # Step 1: Build groups of consecutive characters
        for i in range(1, len(s)):
            if s[i] == s[i - 1]:
                count += 1
            else:
                groups.append(count)
                count = 1
        groups.append(count)
        
        # Step 2: Count valid substrings
        result = 0
        for i in range(len(groups) - 1):
            result += min(groups[i], groups[i + 1])
        
        return result


# Example usage
obj = Solution()
print(obj.countBinarySubstrings("00110011"))  # Output: 6
print(obj.countBinarySubstrings("10101"))     # Output: 4
